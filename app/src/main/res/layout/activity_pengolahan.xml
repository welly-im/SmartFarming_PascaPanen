<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Pengolahan.Pengolahan">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU PENGOLAHAN"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/toFermentasi"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="METODE"
                            android:textColor="@color/yellow"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BASAH"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            android:fontFamily="sans-serif-black" />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="FERMENTASI + PENJEMURAN"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layoutDirection="rtl">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih"
                            android:textStyle="normal"
                            android:textColor="@color/green"
                            android:fontFamily="sans-serif-black"
                            android:textAllCaps="false"
                            android:paddingVertical="10dp"
                            android:backgroundTint="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/toPenjemuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="METODE"
                            android:textColor="@color/yellow"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KERING"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            android:fontFamily="sans-serif-black" />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="PENJEMURAN"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/black"
                            android:fontFamily="sans-serif-black"
                            android:paddingVertical="10dp"
                            android:text="Pilih"
                            android:textAllCaps="false"
                            android:textColor="@color/green"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textSedangDiprosesFermentasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="40dp"
                android:text="Sedang Diproses - Fermentasi"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/textSedangDiproses"
                app:layout_constraintVertical_bias="0.0">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:outlineAmbientShadowColor="@color/white"
                            android:outlineSpotShadowColor="@color/white"
                            app:cardBackgroundColor="@color/orange"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Fermentasi"
                                        android:textColor="@color/black"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Januari 2022"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Proses pengeringan di bulan Juli"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/circle">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="sans-serif-black"
                                            android:gravity="center"
                                            android:text="40Kg"
                                            android:textColor="@color/black"
                                            android:textSize="30dp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:outlineAmbientShadowColor="@color/white"
                            android:outlineSpotShadowColor="@color/white"
                            app:cardBackgroundColor="@color/orange"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Fermentasi"
                                        android:textColor="@color/black"
                                        android:textSize="25dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Januari 2022"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Proses pengeringan di bulan Juli"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/circle">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="sans-serif-black"
                                            android:gravity="center"
                                            android:text="40Kg"
                                            android:textColor="@color/black"
                                            android:textSize="30dp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:id="@+id/textSedangDiprosesPenjemuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="40dp"
                android:text="Sedang Diproses - Penjemuran"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/textSedangDiproses"
                app:layout_constraintVertical_bias="0.0">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:outlineAmbientShadowColor="@color/white"
                            android:outlineSpotShadowColor="@color/white"
                            app:cardBackgroundColor="@color/yellow"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Penjemuran"
                                        android:textColor="@color/black"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Januari 2022"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Proses pengeringan di bulan Juli"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/circle">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="sans-serif-black"
                                            android:gravity="center"
                                            android:text="40Kg"
                                            android:textColor="@color/black"
                                            android:textSize="30dp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:outlineAmbientShadowColor="@color/white"
                            android:outlineSpotShadowColor="@color/white"
                            app:cardBackgroundColor="@color/yellow"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Penjemuran"
                                        android:textColor="@color/black"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="Januari 2022"
                                        android:textColor="@color/black"
                                        android:textSize="18dp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Proses pengeringan di bulan Juli"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/circle">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="sans-serif-black"
                                            android:gravity="center"
                                            android:text="40Kg"
                                            android:textColor="@color/black"
                                            android:textSize="30dp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>